@page
@model IcSoftShopAdmin.Pages.ManageSize.UpdateModel
<h2>Cập nhật Kích Cỡ</h2>

<form method="post">
    <input type="hidden" asp-for="Sizes.SizeId" />
    <div class="form-group">
        <label asp-for="Sizes.SizeName"></label>
        <input asp-for="Sizes.SizeName" class="form-control" />
        <span asp-validation-for="Sizes.SizeName" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/ManageSize/Index" class="btn btn-secondary">Cancel</a>
</form>

