@page
@model IcSoftShopAdmin.Pages.Manage.CustomersModel
@{
}

<style>
    /* Fixed size chart container */
    .chart-container {
        position: relative;
        width: 80%; /* Fixed width percentage */
        max-width: 800px; /* Maximum width */
        margin: 0 auto;
    }

    /* Fixed canvas size */
    canvas {
        width: 100% !important; /* Full width of the container */
        height: 300px !important; /* Fixed height */
    }
</style>

<h1 class="my-4">Customer Management</h1>
<form method="get" class="d-flex">
    <input type="text" asp-for="SearchString" class="form-control" placeholder="Search Users...">
    <button type="submit" class="btn btn-primary ms-2">
        <i class="fas fa-search"></i>
    </button>
</form>


<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ShopUsers != null && Model.ShopUsers.Count > 0)
        {
            @foreach (var item in Model.ShopUsers)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Address</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>Order Details Here</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <!-- Edit Button -->
                            <a class="btn btn-sm btn-info d-inline-flex align-items-center me-2" asp-page="./Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <!-- Delete Form -->
                            <form method="post" asp-page-handler="Delete" style="display:inline-block;">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger d-inline-flex align-items-center">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No users found</td>
            </tr>
        }
    </tbody>
</table>

<h2 style="text-align: center; font-weight: 300;">Account Creation by Day</h2>
<div class="chart-container">
    <canvas id="accountChart"></canvas>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
