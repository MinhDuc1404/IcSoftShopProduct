<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IcBlogAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IcBlogAdmin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        header {
            flex-shrink: 0;
        }

        footer {
            flex-shrink: 0;
        }

        .main-container {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .logo {
            display: flex;
            align-items: center;
            font-size: 2rem;
            font-weight: bold;
            color: #000;
        }

        .logo-text {
            font-family: 'Helvetica', sans-serif;
            font-weight: 700;
            color: white;
        }

        .trademark {
            font-size: 0.3em;
            margin-left: 0.2em;
            position: relative;
            top: -0.3em;
            color: white;
        }

        .offcanvas-start {
            background-color: rgba(0, 0, 0, 0.8); /* Dark transparent background */
            color: white; /* White text */
        }

        /* Offcanvas header */
        .offcanvas-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            padding: 15px;
        }

            /* Close button */
            .offcanvas-header .btn-close {
                filter: invert(1); /* Makes the close button visible on a dark background */
            }

        /* Offcanvas body */
        .offcanvas-body {
            padding: 15px;
        }

        /* Sidebar menu styling */
        .sidebar-menu {
            padding: 0;
            margin: 0;
        }

            /* Sidebar list items */
            .sidebar-menu .list-group-item {
                background-color: transparent;
                border: none;
                color: white;
                padding: 10px 0;
                transition: background-color 0.3s, color 0.3s;
            }

                /* Hover effect for sidebar links */
                .sidebar-menu .list-group-item:hover {
                    background-color: rgba(255, 255, 255, 0.1); /* Lighten background on hover */
                    color: white; /* Ensure text stays white */
                }

            /* Dropdown menu inside the offcanvas */
            .sidebar-menu .dropdown-toggle {
                cursor: pointer;
                color: white;
            }

            /* Dropdown items */
            .sidebar-menu .dropdown-menu {
                background-color: rgba(0, 0, 0, 0.9); /* Slightly darker background for dropdown */
            }

            /* Dropdown item links */
            .sidebar-menu .dropdown-item {
                color: white;
                transition: background-color 0.3s, color 0.3s;
            }

                /* Hover effect for dropdown items */
                .sidebar-menu .dropdown-item:hover {
                    background-color: rgba(255, 255, 255, 0.1); /* Lighten background on hover */
                    color: white;
                }

            /* Icon styling */
            .sidebar-menu .icon {
                margin-right: 10px;
                font-size: 1.2rem;
                vertical-align: middle;
            }
    </style>
</head>
<body>
    <header style="margin: 0px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow" style="background-color:rgba(0, 0, 0, 0.8);">
            <div class="container-fluid">
                <button class="btn btn-outline-light me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/" style="font-weight: 700; color: white;">
                    <div class="logo">
                        <span class="logo-text">leninn</span><sup class="trademark">®</sup>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex align-items-center" id="navbarNav">
                    <ul class="navbar-nav me-auto d-flex align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index" style="color: white; font-weight: bold;">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy" style="color: white; font-weight: bold;">Chính Sách</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <partial name="_LoginPartial"></partial>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar Offcanvas -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarLabel">Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="sidebar-menu list-group">
                <li><a href="/" class="list-group-item"><span class="icon">🏠</span> Dashboard</a></li>
                <li><a asp-area="" asp-page="/Manage/Coupon" class="list-group-item"><span class="icon">🎁</span> Catalog</a></li>
                <li><a asp-area="" asp-page="/Manage/Customers" class="list-group-item"><span class="icon">👤</span> Customers</a></li>
                <li class="list-group-item dropdown">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none">
                        <span class="icon">🔽</span> Manage Menu
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/ManageProduct/Create"><span class="icon">👕</span> Sản phẩm</a></li>
                        <li><a class="dropdown-item" asp-page="/ManageCategory/Index"><span class="icon">📂</span> Danh mục</a></li>
                        <li><a class="dropdown-item" asp-page="/ManageCollection/Index"><span class="icon">🏷️</span> Bộ sưu tập</a></li>
                        <li><a class="dropdown-item" asp-page="/ManageColor/Index"><span class="icon">🏷️</span> Màu Sắc</a></li>
                        <li><a class="dropdown-item" asp-page="/ManageSize/Index"><span class="icon">🏷️</span> Kích Cỡ</a></li>
                    </ul>
                </li>
                <li><a href="#" class="list-group-item"><span class="icon">📊</span> Reports</a></li>
            </ul>
        </div>
    </div>

    <!-- Main container -->
    <div class="main-container">
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #000000CC">
        <div class="container">
            &copy; 2024 - IcShopAdmin - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
