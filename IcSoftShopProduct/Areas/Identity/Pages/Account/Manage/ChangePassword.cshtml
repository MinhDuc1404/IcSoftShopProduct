@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Old Password Field -->
            <div class="form-floating mb-3">
                <label asp-for="Input.OldPassword" class="form-label">Mật khẩu cũ</label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu cũ của bạn." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-floating mb-3">
                <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu mới của bạn." />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng xác nhận mật khẩu mới của bạn." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-100 btn btn-primary" style="background-color: dodgerblue">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
