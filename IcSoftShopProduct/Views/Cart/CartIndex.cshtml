@model CartViewModel

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <div class="breadcrumb__links">
                        <a href="/">Trang chủ</a>
                      <span>Giỏ hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                
                            </tr>
                        </thead>
                        <tbody>
                          @foreach(var item in Model.CartItems)
                          {
                                <tr data-productname="@item.ProductName">
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="~/@item.ProductImageUrl" alt="Product Image" class="cart-product-image">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.ProductName</h6>
                                            <p style="font-size:12px;">@item.Color / @item.Size</p>
                                            <h5>@item.Price.ToString("N0").Replace(",", ".")₫</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" value="@item.Quantity">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@item.TotalPrice.ToString("N0").Replace(",", ".")₫</td>
                                    <td class="cart__close"><i class="fa fa-close"></i></td>
                                </tr>
                          }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="#">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Coupon code">
                        <button type="submit">Apply</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span class="subtotal"></span></li>
                        <li>Total <span class="total">@Model.TotalPrice.ToString("N0").Replace(",", ".")₫</span></li>
                    </ul>
                    <a asp-controller="CheckOut" asp-action = "Index" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $(".inc.qtybtn").click(function () {
            console.log("Tăng số lượng được bấm");
            var row = $(this).closest("tr");
            var productname = row.data("productname"); 
            var quantityInput = row.find(".quantity input");
            var currentQuantity = parseInt(quantityInput.val());
            var newQuantity = currentQuantity + 1;
            updateQuantity(productname, newQuantity, row); 
        });

  
        $(".dec.qtybtn").click(function () {
            var row = $(this).closest("tr");
            var productname = row.data("productname"); 
            var quantityInput = row.find(".quantity input");
            var currentQuantity = parseInt(quantityInput.val());
            var newQuantity = currentQuantity - 1;
            if (newQuantity > 0) {
                updateQuantity(productname, newQuantity, row); 
            }
        });

 
        $(".cart__close").click(function () {
            var row = $(this).closest("tr");
            var productname = row.data("productname"); 
            removeItem(productname, row); 
        });


        function updateQuantity(productname, newQuantity, row) {
            $.ajax({
                url: '/Cart/UpdateQuantity',
                type: 'POST',
                data: {
                    productname: productname, 
                    quantity: newQuantity
                },
                success: function (response) {
                    if (response.success) {
                        row.find(".quantity input").val(newQuantity);
                        $('.cart-item-count').text(response.cartquantity);
                        row.find(".cart__total").text(response.totalCartPrice.toLocaleString('en').replace(/,/g, '.') + '₫');
                        row.find(".cart__price").text(response.totalcartitem.toLocaleString('en').replace(/,/g, '.') + '₫');// Cập nhật giá từng sản phẩm
                        updateCartTotal(response.totalCartPrice); 

                    }
                }
            });
        }


        function removeItem(productname, row) {
            $.ajax({
                url: '/Cart/RemoveItem',
                type: 'POST',
                data: { productname: productname }, 
                success: function (response) {
                    if (response.success) {
                        row.remove();
                        $('.cart-item-count').text(response.cartquantity);
                        updateCartTotal(response.totalCartPrice); 
                    }
                }
            });
        }

        // Cập nhật tổng giá
        function updateCartTotal(totalPrice) {
            $(".cart__total .total").text(totalPrice.toLocaleString('en').replace(/,/g, '.') + '₫');
        }
    });


</script>
