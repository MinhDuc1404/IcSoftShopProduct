@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section Begin -->
<section class="hero" style="margin-bottom:60px">
    <div class="hero__slider owl-carousel">
        <div class="hero__items set-bg" data-setbg="img/hero/slider_1.webp"></div>
        <div class="hero__items set-bg" data-setbg="img/hero/slider_2.webp"></div>
        <div class="hero__items set-bg" data-setbg="img/hero/slider_3.webp"></div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-bottom: 60px">
                <h2 class="text-center" style="font-family: 'Noto Serif Display',sans-serif; font-size:30px">
                    NEWEST ARRIVALS
                </h2>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (var product in Model.Products)
            {
                var projectBBaseUrl = "https://localhost:7159"; // Địa chỉ URL của dự án B
                var HeaderImageUrl = product.ProductImage.FirstOrDefault()?.ImageUrl;

                // Tạo đường dẫn hoàn chỉnh đến hình ảnh
                var fullImageUrl = $"{projectBBaseUrl}/{HeaderImageUrl}";
                <div class="col-lg-3 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@fullImageUrl">
                            <div class="overlay">
                                <div class="product__info">
                                    <a asp-controller="Product" asp-action="Details"> <h3 class="product__name">@product.ProductName</h3> </a>
                                    <p class="product__price">@product.ProductPrice.ToString("N0").Replace(",",".") ₫</p> <!-- Hiển thị giá với định dạng -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Product Section End -->
